#!/bin/bash

if [ $(cat /sys/class/power_supply/BAT0/status) == "Charging" ]
then
	echo "<span color='lime'>ðŸ”Œ $(cat /sys/class/power_supply/BAT0/capacity)%</span>"
    elif [ $(cat /sys/class/power_supply/BAT0/capacity) -lt 21 ]
then
    echo ðŸ”‹ "<span color='red'>$(cat /sys/class/power_supply/BAT0/capacity)%</span>"
else
	echo ðŸ”‹ $(cat /sys/class/power_supply/BAT0/capacity)%
fi
